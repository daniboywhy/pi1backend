generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Aluno {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  cpf     String   @unique
  usuario String   @unique
  name    String
  password String
}

model Tutor {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  cpf     String   @unique
  usuario String   @unique
  name    String
  password String
}